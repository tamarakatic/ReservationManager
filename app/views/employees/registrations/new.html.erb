<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<%= f.text_field :manager_id, hidden: true, value: current_manager.id %>
<%= f.text_field :type, hidden: true, value: params[:type] %>

<div class="field">
    <%= f.label :firstname %><br/>
    <%= f.text_field :firstname, autofocus: true %>
</div>

<div class="field">
    <%= f.label :lastname %><br/>
    <%= f.text_field :lastname, autofocus: true %>
</div>

<div class="field">
    <%= f.label :birth_date %><br/>
    <%= f.date_select :birth_date, {:order => [:month, :day, :year],:prompt => true, :start_year => 1940, :end_year => 2000} %>
</div>

<div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true %>
</div>

<div class="field">
    <%= f.label :clothing_size %><br/>
    <%= f.select(:clothing_size, Employee.clothing_sizes.keys.map {|size| [size.titleize,size]})%>
</div>

<div class="field">
    <%= f.label :shoe_size %><br/>
    <%= f.select :shoe_size, options_for_select(35..49) %>
</div>

<% if params[:type] == "Cook" %>
    <div class="field">
      <%= f.label :speciality %> <br/>
      <%= f.text_field :speciality, :autofocus => true %>
    </div>
<br/>
<% end %>

<div class="actions">
  <%= f.submit "Sign up" %>
</div>

<% end %>